public class SomatoriaSerie {
    
    public static double somatoria(int n) {
        if (n == 1) {
            return 1.0;
        }
        return 1.0 / n + somatoria(n - 1);
    }
    
    public static void main(String[] args) {
        int n = 5;
        System.out.println("Somatória da série até " + n + ": " + somatoria(n));
    }
}
